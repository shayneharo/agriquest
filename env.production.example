# AgriQuest Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DOMAIN=your-domain.com

# Database Configuration
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://agriquest:${POSTGRES_PASSWORD}@db:5432/agriquest

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@your-domain.com
MAIL_USE_TLS=true

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/agriquest.log

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://redis:6379/1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

